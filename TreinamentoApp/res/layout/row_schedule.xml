<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    
    <ImageView android:id="@+id/img_background"
        android:layout_width="match_parent"
        android:layout_height="130dip"
        android:scaleType="fitXY"
        android:contentDescription="@string/app_name"
        android:src="@drawable/back_schedule"/>
    
    <TextView android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:gravity="center"
        android:lines="2"
        android:layout_marginTop="10dip"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:text="STRING GRANDESTRING GRANDESTRING GRANDESTRING GRANDESTRING GRANDESTRING GRANDE"/>
    
<!--     <ImageView android:id="@+id/img_icon"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:src="@drawable/logo"
        android:contentDescription="@string/app_name"
        android:layout_margin="8dip"/> -->
    
    <TextView android:id="@+id/txt_teacher"
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:textSize="13sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginTop="55dip"
        android:text="@string/app_name"/>
    

</FrameLayout>
