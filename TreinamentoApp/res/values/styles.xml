<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_treinamento</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Treinamento</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Treinamento</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Treinamento</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Treinamento</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Treinamento</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_treinamento</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_treinamento</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Treinamento</item>
        
    </style>
    
    
    <style name="ActionBar.Solid.Treinamento" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_treinamento</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_treinamento</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_treinamento</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Treinamento</item>
        <item name="android:titleTextStyle">@style/treinamento.ActionBar.TitleTextStyle</item>
    </style>
    
    <style name="treinamento.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ActionBar.Transparent.Treinamento" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_treinamento</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Treinamento</item>
    </style>
    
    <style name="PopupMenu.Treinamento" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_treinamento</item>	
    </style>

    <style name="DropDownListView.Treinamento" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_treinamento</item>
    </style>

    <style name="ActionBarTabStyle.Treinamento" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_treinamento</item>
    </style>

    <style name="DropDownNav.Treinamento" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_treinamento</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_treinamento</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_treinamento</item>
    </style>
    
    <style name="ProgressBar.Treinamento" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_treinamento</item>
    </style>
    
    <style name="ActionButton.CloseMode.Treinamento" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_treinamento</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Treinamento.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Treinamento</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Treinamento</item>
    </style>
    
     
    
</resources>
